<script type="text/javascript">
    $(document).ready(function () {
        //alert(getCookie("UserInfo"));
    });

    function userLogin() {
        var sName = $("#userName").val();
        var sPwd = $("#userPwd").val();
        if (sName == "" || sName == null) {
            $(".tishi").html("用户名不能为空").show();
            return false;
        }
        else {
            if (!vReg_isEmail(sName)) {
                $(".tishi").html("用户名格式错误").show();
                return false;
            }
        }
        if (sPwd == "" || sPwd == null) {
            $(".tishi").html("密码不能为空").show();
            return false;
        }


        var sIsSave = "0";
        if ($("#sIsSave").prop("checked")) sIsSave = "1";

        $.ajax({
            type: "POST",
            contentType: "application/json",
            url: "/Login.aspx/UserLogin",
            data: "{sName:'" + sName + "',sPwd:'" + sPwd + "',sIsSave:'" + sIsSave + "'}",
            dataType: "json",
            success: function (msg) {
                if (msg.d == 0) {
                    $(".tishi").html("用户名或密码错误").show();
                }
                else if (msg.d < 0) {
                    $(".tishi").html("账户未激活 <a onclick=\"toActEmail('" + msg.d + "','" + $("#userName").val() + "')\" style=\"cursor:pointer;\">激活账户</a>").show();
                }
                else {
                    //window.parent.location.href = "http://www.entgroup.cn";
                    window.parent.location.reload();
                }
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                alert(XMLHttpRequest);
            }
        });
    }


    function toActEmail(sId, sEmail) {
        window.parent.location.href = '/Register_Activate.aspx?s=' + escape(Math.abs(sId)) + "&e=" + escape(sEmail);
    }
    function toReg() {
        window.parent.location.href = '/Register_Account.aspx';
    }
    function toPwd() {
        window.parent.location.href = '/ResetPwd.aspx';
    }
</script>
